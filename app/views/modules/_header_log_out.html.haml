.header-inner
  .upper-box
    = link_to root_path, class: "upper-box__logo" do
      = image_tag (asset_path "logo.png")
    %input.upper-box__search{placeholder: "キーワードから探す", type: "text"}
    = fa_icon "search"
  .under-box
    .under-box__left
      %ul.l-left
        %li
          = link_to root_path, class: "from-category" do
            カテゴリーから探す
        %li
          = link_to root_path, class: "from-bland" do
            ブランドから探す
    .under-box__right
      .l-right
        = link_to new_user_session_path, class: "header-login-btn" do
          ログイン
        = link_to new_user_registration_path, class: "header-signup-btn" do
          新規会員登録
