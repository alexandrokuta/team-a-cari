%header
  - if user_signed_in?
    = render 'modules/header_log_in'
  - else
    = render 'modules/header_log_out'

%main.top-page-main{role: "main"}
  .swiper-container
    .swiper-wrapper
      = image_tag (asset_path "welcome1.jpg"), class: "swiper-slide"
      = image_tag (asset_path "tsuyoshi.png"), class: "swiper-slide"
    .swiper-button-prev
    .swiper-button-next
    .swiper-pagination

  :javascript
    var swiper = new Swiper('.swiper-container', {
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: true
      },
      pagination: {
          el: '.swiper-pagination',
          type: 'bullets',
        },
    });

  %section.pickup-container
