.logout__wrapper
  %header
    .header-inner
      .upper-box
        = link_to root_path, class: "upper-box__logo" do
          = image_tag(asset_path "logo.png")
        %input.upper-box__search{placeholder: "キーワードから探す", type: "text"}
        = fa_icon "search"
      .under-box
        .under-box__left
          %ul.l-left
            %li
              = link_to root_path, class: "from-category" do
                カテゴリーから探す
            %li
              = link_to root_path, class: "from-bland" do
                ブランドから探す
        .under-box__right
          .l-right
            / = link_to root_path, class: "header-login-btn" do
            /   ログイン
            / = link_to root_path, class: "header-signup-btn" do
            /   新規会員登録
            %ul.header-user-nav
              %li
                = link_to root_path, class: "icons" do
                  = image_tag (asset_path "member_photo_noimage_thumb.png"), class: "user-icon"
                  %span.icon-text
                    マイページ
              %li
                = link_to root_path, class: "icons" do
                  = fa_icon "bell-o"
                  %span.icon-text
                    お知らせ
              %li
                = link_to root_path, class: "icons" do
                  = fa_icon "check"
                  %span.icon-text
                    やることリスト

  %nav.bread-crumbs
    - breadcrumb :logout
    = breadcrumbs class: "breadcrumbs", style: :ul, separator: " #{content_tag(:i, '', :class=>'fa fa-chevron-right')} "

  %main.prof__l-container.clearfix
    = render 'side/side_bar'

    .logout__content
      .logout__btn__wrapper
        = link_to "ログアウト", root_path, class: "btn__logout"

  = image_tag (asset_path "mercari.png")

  %a.sell-btn
    .sell-btn__text 出品
    = fa_icon 'camera'
