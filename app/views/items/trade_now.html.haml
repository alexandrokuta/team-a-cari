%header
  = render 'modules/header_log_in'

%nav.bread-crumbs
  - breadcrumb :identification
  = breadcrumbs class: "breadcrumbs", style: :ul, separator: " #{content_tag(:i, '', :class=>'fa fa-chevron-right')} "

%main.prof__l-container.clearfix
  = render 'side/side_bar'

  .transaction__wrapper
    %section.transaction__contents
      %h2 出品した商品
      %ul
        %li
          = link_to trade_sell_path do
            %h3.status__default 出品中
        %li
          = link_to trade_now_path do
            %h3.status__default.status__select 取引中
        %li
          = link_to trade_sold_path do
            %h3.status__default 売却済み
    .transaction__contents--lists
      %ul.transaction__list
        - if current_user.items.present?
          %li
            = link_to root_path, class: "mypage-item-list" do
              = image_tag (asset_path "logo.mini.png"), class: "image-size-default"
              .mypage-item-body
                .mypage-item-body__text
                  MacBookPro 256GB(2018年モデル)
                .mypage-item-body__icon
                  .mypage-item-status.action-required 発送待ち

              = fa_icon 'chevron-right'
        - else
          %li.transaction__list--default.transaction__not-found 取引中の商品がございません。
