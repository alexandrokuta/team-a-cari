.card__contents__wrapper
  %header
    .header-inner
      .upper-box
        = link_to root_path, class: "upper-box__logo" do
          = image_tag(asset_path "logo.png")
        %input.upper-box__search{placeholder: "キーワードから探す", type: "text"}
        = fa_icon "search"
      .under-box
        .under-box__left
          %ul.l-left
            %li
              = link_to root_path, class: "from-category" do
                カテゴリーから探す
            %li
              = link_to root_path, class: "from-bland" do
                ブランドから探す
        .under-box__right
          .l-right
            / = link_to root_path, class: "header-login-btn" do
            /   ログイン
            / = link_to root_path, class: "header-signup-btn" do
            /   新規会員登録
            %ul.header-user-nav
              %li
                = link_to root_path, class: "icons" do
                  = image_tag (asset_path "member_photo_noimage_thumb.png"), class: "user-icon"
                  %span.icon-text
                    マイページ
              %li
                = link_to root_path, class: "icons" do
                  = fa_icon "bell-o"
                  %span.icon-text
                    お知らせ
              %li
                = link_to root_path, class: "icons" do
                  = fa_icon "check"
                  %span.icon-text
                    やることリスト


  %nav.bread-crumbs
    %ul
      %li{itemscope: true, itemtype: "#"}
        = link_to root_path, itemprop: "url" do
          %span{itemprop: "title"}
            メルカリ
        = fa_icon "chevron-right"
      %li{itemscope: true, itemtype: "#"}
        %span{itemprop: "title"}
          マイページ
        = fa_icon "chevron-right"
      %li{itemscope: true, itemtype: "#"}
        %span.logpot_bold{itemprop: "title"}
          支払い方法

  %main.prof__l-container.clearfix.credit__flexbox
    = render 'side/side_bar'

    .card__wrapper
      %section.card__input--text
        %h2 支払い方法
        .default__card--list
          %section
            .default__card--list-text
              %h3 クレジットカード一覧
        %section.credit__add__wrapper--button
          = link_to root_path, class: "link__add__card" do
            .credit__add__content--button
              %i.fa.fa-credit-card
              クレジットカードを追加する
        .set__payment
          = link_to root_path do
            %span お支払い方法について
            %i.fa.fa-angle-right

  = image_tag (asset_path "mercari.png")

  %a.sell-btn
    .sell-btn__text 出品
    = fa_icon 'camera'
