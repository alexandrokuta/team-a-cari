.review__wrapper
  .review__contents
    .review__icons__wrapper
      = form_for [@item,@review] do |f|
        .review__icons
          .review__icons--good
            %i.fa.fa-smile-o
            = f.check_box :review, {}, "良い", nil
          .review__icons--normal
            %i.fa.fa-meh-o
            = f.check_box :review, {}, "普通", nil
          .review__icons--bad
            %i.fa.fa-frown-o
            = f.check_box :review, {}, "悪い", nil
        - if current_user.id == @item.buyer_id
          .review__button
            = f.submit :出品者を評価して取引を終わる, class: "review__submit"
        - else
          .review__button
            = f.submit :購入者を評価して取引を終わる, class: "review__submit"
