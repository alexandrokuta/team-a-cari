.review__wrapper
  - if current_user.id == @item.buyer_id
    .review__request
      %h3 出品者を評価してください
  - else
    .review__request
      %h3 購入者を評価してください
  .review__contents
    .review__icons__wrapper
      = form_for [@item,@review] do |f|
        .review__icons
          .review__icons--good
            = f.label :review, for: "good" do
              %i.fa.fa-smile-o.review__icon--default
              = f.check_box :review, {id: "good", class: "check__hidden"}, "良い", nil
          .review__icons--normal
            = f.label :review, for: "normal" do
              %i.fa.fa-meh-o.review__icon--default
              = f.check_box :review, {id: "normal", class: "check__hidden"}, "普通", nil
          .review__icons--bad
            = f.label :review, for: "bad" do
              %i.fa.fa-frown-o.review__icon--default
              = f.check_box :review, {id: "bad", class: "check__hidden"}, "悪い", nil
        .review__text
          .review__text__contents
            .review__text__contents--review
              %span 良い
              %span 普通
              %span 悪い
        - if current_user.id == @item.buyer_id
          .review__button
            = f.submit :出品者を評価して取引を終わる, class: "review__submit"
        - else
          .review__button
            = f.submit :購入者を評価して取引を終わる, class: "review__submit"
